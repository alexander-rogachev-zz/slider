<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.rogachev.slider.app.MainActivity">

    <TextView
        android:text="@string/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run"
        android:id="@+id/btn_run"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/cb_autorun_afterrestart"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_start_date"
        android:layout_below="@+id/tv_title"
        android:layout_toRightOf="@+id/tv_title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_start_time"
        android:layout_alignTop="@+id/btn_start_date"
        android:layout_toRightOf="@+id/btn_start_date"
        android:layout_marginLeft="64dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_end_date"
        android:layout_alignBaseline="@+id/btn_end_time"
        android:layout_alignBottom="@+id/btn_end_time"
        android:layout_alignLeft="@+id/btn_start_date"
        android:layout_alignStart="@+id/btn_start_date" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Автоматический запуск после перезагрузки"
        android:id="@+id/cb_autorun_afterrestart"
        android:checked="false"
        android:layout_below="@+id/cb_autorun"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Автоматический запуск во время зарядки"
        android:id="@+id/cb_autorun"
        android:checked="false"
        android:layout_below="@+id/btn_end_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_end_time"
        android:layout_below="@+id/btn_start_time"
        android:layout_alignLeft="@+id/btn_start_time"
        android:layout_alignStart="@+id/btn_start_time" />

</RelativeLayout>
